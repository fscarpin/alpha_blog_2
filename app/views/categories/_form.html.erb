<!--
Pass the category and the form title to this partial

Example:
  render "form", category: @category, locals: {form_title: "Create Category"}
 -->
<%= render "shared/errors", model: category %>

<h1 class="text-center"> <%= locals[:form_title] %> </h1>

<%= bootstrap_form_for category, inline_errors: false do |f| %>
  <%= f.text_field :name %>
  <%= f.submit locals[:form_title], class: "btn btn-primary" %>
<% end %>

<div class="text-center">
  <p>
    [ <%= link_to "Back to articles", articles_path %> ]
  </p>
</div>
