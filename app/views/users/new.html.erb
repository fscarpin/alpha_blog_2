<%= render 'shared/errors', model: @user %>

<div class="text-center">
  <h2>Sign up</h2>
</div>

<div class="row">
  <%= bootstrap_form_for(@user, inline_errors: false, layout: :horizontal, label_col: "col-xs-3",
                        control_col: "col-xs-6") do |f| %>
    <%= f.text_field :username, autofocus: true %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.form_group do %>
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>
