<!-- Show possible error messages. The article object is passed to our partial -->
<%= render "shared/errors", model: @article %>

<h1 class="text-center"><%= locals[:form_title]%></h1>

<!-- bootstrap_form_for -->
<%= bootstrap_form_for @article do |f| %>
    <%= f.text_field :title, autofocus: true %>
    <%= f.text_area :description, rows: 15 %>
    <%= f.submit class: "btn btn-primary"%>
<% end %>

<!-- text-center is provided by bootstrap -->
<div class="text-center">
  <p>
    [ <%= link_to "Back to articles", articles_path %> ]
  </p>
</div>
