<!-- Show possible error messages -->
<%= render "errors" %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= locals[:form_title]%></h3>
      </div>
      <div class="panel-body">
      <!-- Disabled the automatic error of bootstrap_form_for -->
      <%= bootstrap_form_for @article, inline_errors: false do |f| %>
          <%= f.text_field :title, autofocus: true %>
          <%= f.text_area :description, rows: 15 %>
          <%= f.submit class: "btn btn-primary"%>
      <% end %>
      </div>
    </div>
  </div>
</div>

<!-- text-center is provided by bootstrap -->
<div class="text-center">
  <p>
    [ <%= link_to "Back to articles", articles_path %> ]
  </p>
</div>
