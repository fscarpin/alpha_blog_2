<div class="container">
  <div class="well">
    <div class="text-center">
      <h3><%= @article.title %></h3>
    </div>
    <div class="article_description">
      <!-- Simple_format show the text as it is... if the user pressed enter, it'll keep this new line -->
      <p><%= simple_format(@article.description) %></p></br>
    </div>
    <!-- Show the Edit, Delete and View all Articles button -->
    <div class="article_actions">
      <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %>
      <%= link_to "View all articles", articles_path, class: "btn btn-success" %>
      <%= link_to "Delete", article_path(@article), method: :delete, class: "btn btn-danger",
                            data: {confirm: "Are you sure?"} %>
    </div>
  </div>
</div>
