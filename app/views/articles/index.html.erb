<div class="text-center">
  <h1>Article List</h1>
</div>


<% @articles.each do |article| %>
  <div class="well well-lg">
    <div class="article_title">
      <%= link_to article.title, article_path(article) %><br>
    </div>
    Description: <%= article.description.truncate_words(20, omission: '... (continued)') %><br><br>
    <div class="article_actions">
      <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-primary btn-xs" %>
      <%= link_to "Delete this article", article_path(article), method: :delete,
                  class: "btn btn-danger btn-xs", data: {confirm: "Are you sure?"} %>
    </div>
  </div>
<% end %>
